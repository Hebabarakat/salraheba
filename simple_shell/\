size_t _strcspn(const char *str, const char *ch)
{
const char *p, *q;
size_t count = 0;

for (p = str; *p != '\0'; p++)
{
for (q = ch; *q != '\0'; q++)
{
if (*p == *q)
{
return (count);
}
}
count++;
}
return (count);
}
*/
void noninteract(char *filename)
{
    if (filename == NULL)
    {
        // Handle interactive mode (no file specified)
        // ...
        return;
    }

    // Handle non-interactive mode (file specified)
    FILE *fp = fopen(filename, "r");
    if (fp == NULL)
    {
        fprintf(stderr, "Error: Could not open file '%s': %s\n", filename, strerror(errno));
        exit(EXIT_FAILURE);
    }

    char *lineptr = NULL;
    size_t n = 0;
    ssize_t nreads;
    char **token;

    // Open the null device for writing
    FILE *null_device = fopen("/dev/null", "w");
    if (null_device == NULL)
    {
        fprintf(stderr, "Error: Could not open null device: %s\n", strerror(errno));
        exit(EXIT_FAILURE);
    }

    // Redirect stdout to the null device
    int saved_stdout = dup(STDOUT_FILENO);
    if (dup2(fileno(null_device), STDOUT_FILENO) == -1)
    {
        fprintf(stderr, "Error: Could not redirect stdout: %s\n", strerror(errno));
        exit(EXIT_FAILURE);
    }

    while ((nreads = getline(&lineptr, &n, fp)) != -1)
    {
        // Remove newline character from input
        lineptr[strcspn(lineptr, "\n")] = '\0';

        // Check if command is empty
        if (nreads == 1)
        {
            continue;
        }

        token = _strcut(lineptr);
        _exce(token);
    }

    // Restore stdout to original file descriptor
    fflush(stdout);
    dup2(saved_stdout, STDOUT_FILENO);

    free(lineptr);
    fclose(fp);
    fclose(null_device);
}
